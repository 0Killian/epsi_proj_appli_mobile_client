<?xml version="1.0" encoding="utf-8"?>

<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="epsi_projet_mobile_client.Popups.BluetoothPopup"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">
    
    <VerticalStackLayout>
        <Label Text="The bluetooth must be enabled to use this application"></Label>
        <Button Text="Enable Bluetooth" Command="{Binding EnableBluetoothCommand}"/>
    </VerticalStackLayout>
    
</toolkit:Popup>